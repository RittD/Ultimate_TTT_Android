<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.knightStudios.ultimateTicTacToe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ttt_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ttt_icon_round"
        android:supportsRtl="true">

        <activity
            android:name="com.knightStudios.ultimateTicTacToe.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".GameActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />


        <activity
            android:name=".WinWindowActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".InstructionsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>



    </application>

</manifest>